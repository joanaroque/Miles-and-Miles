@model CinelAirMiles.Models.ChangePasswordViewModel


<section class="content">
    <div class="container">
        <div class="section-title">
            <h3 class="card-title">Change Password</h3>
        </div>
        <div class="col-md-6 col-sm-6">
            @using (Html.BeginForm("ChangePasswordClient", "Account", FormMethod.Post, new { @autocomplete = "on" }))
            {
                @Html.AntiForgeryToken()

                <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="OldPassword">Current password</label><br />
                        @Html.TextBoxFor(model => model.OldPassword, "Current Password", new
                        {
                            @class = "form-control",
                       style = "width:260px",
                       Type = "password"
                   })
                        <span asp-validation-for="OldPassword" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewPassword">New password</label>
                        @Html.TextBoxFor(model => model.NewPassword, "New Password", new
                   {
                       @class = "form-control",
                            style = "width:260px",
                       Type = "password"
                   })
                        <span asp-validation-for="NewPassword" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Confirm">Confirm</label>
                        @Html.TextBoxFor(model => model.Confirm, "Confirm new Password", new
                   {
                       @class = "form-control",
                       style = "width:260px",
                       Type = "password"
                   })
                        <span asp-validation-for="Confirm" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Change Password" class="btn btn-success" />
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}