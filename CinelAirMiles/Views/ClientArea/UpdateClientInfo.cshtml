@model CinelAirMiles.Models.ChangeUserViewModel


<div class="container">
    <div class="section-title">
        <h3 class="card-title">Update Personal Information</h3>
    </div>
    <div class="col-md-12 col-sm-12">
        @using (Html.BeginForm("UpdateClientInfo", "ClientArea", FormMethod.Post, new { @autocomplete = "on" }))
        {
            @Html.AntiForgeryToken()

            <div class="col-md-6 col-sm-6">
                <div class="form-group">
                    <label asp-for="Name">Full Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label>Country</label>
                    <select asp-for="CountryId" asp-items="Model.Countries"
                            class="form-control select2" style="width: 100%;">
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-success" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TIN">TIN</label>
                    <input asp-for="TIN" class="form-control" />
                    <span asp-validation-for="TIN" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="City">City</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-warning"></span>
                </div>
            </div>
        }
    </div>
</div>
<div>
    @{ await Html.RenderPartialAsync("UpdatePassword", new CinelAirMiles.Models.ChangePasswordViewModel());}
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

