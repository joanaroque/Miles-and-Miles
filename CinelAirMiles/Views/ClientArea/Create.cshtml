@model CinelAirMiles.Models.ComplaintViewModel

<div class="content-wrapper">
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">New Message</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        @using (Html.BeginForm("Create", "ClientArea", FormMethod.Post, new { @autocomplete = "on" }))
                        {
                            @Html.ValidationSummary(false)
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">

                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Complaint" class="control-label"></label>
                                            <select asp-for="Complaint" asp-items="Model.Complaints" class="form-control"></select>
                                            <span asp-validation-for="Complaint" class="text-danger"></span>
                                        </div>
                                        <label asp-for="Body" class="control-label"></label>
                                        <div class="form-group">
                                            @Html.TextAreaFor(e => e.Body, 10, 74, null)
                                            <span asp-validation-for="Body" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

