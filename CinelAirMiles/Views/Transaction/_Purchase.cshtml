@model CinelAirMiles.Models.TransactionViewModel


<div id="Purchase">
    <div><h2>New Purchase</h2></div>
    <div class="row">
        <form method="post" asp-action="Purchase">
            <input type="hidden" asp-for="Type" />
            <div class="form-group">
                <label asp-for="Value"></label>
                <input type="text" asp-for="Value" name="value" required />
                <span asp-validation-for="Value"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input type="number" asp-for="Price" name="price" readonly />
                <span asp-validation-for="Price"></span>
            </div>
            <button type="submit" class="btn btn-outline-success">Purchase</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
