@model CinelAirMiles.Models.PremiumOfferViewModel


<section id="item_details">
    <div class="container">
        <div class="row">
            <h2 class="card-title">@Html.DisplayFor(model => model.Title)</h2>
            <div class="col-6">
                <p class="text-md">
                    by
                    <b class="d-block">@Html.DisplayFor(model => model.PartnerName)</b>
                </p>
                <img src="@Url.Action("GetOffersImageFile", "Home", new { id = Model.Id})" alt="" />
                <p class="text-md">
                    <b class="d-block">@Html.DisplayFor(model => model.Price)</b>
                    Miles
                </p>
            </div>

            <div class="col-6">
                @if (Model.FlightId != 0)
                {
                    <p class="text-md">
                        Flight number
                        <b class="d-block">@Html.DisplayFor(model => model.FlightId)</b>
                    </p>
                    <p class="text-md">
                        Departure
                        <b class="d-block">@Html.DisplayFor(model => model.Departure)</b>
                    </p>
                    <p class="text-md">
                        Arrival
                        <b class="d-block">@Html.DisplayFor(model => model.Arrival)</b>
                    </p>
                    <p class="text-md">
                        Flight's date
                        <b class="d-block">@Html.DisplayFor(model => model.FlightDateTime)</b>
                    </p>
                }
                <p class="text-md">
                    Offer number
                    <b class="d-block">@Html.DisplayFor(model => model.OfferGuidId)</b>
                </p>
                <p class="text-md">
                    Conditions
                    <b class="d-block">@Html.DisplayFor(model => model.Conditions)</b>
                </p>
            </div>
            <p>
                <a href="#" class="link-black text-sm"><i class="fas fa-link mr-1"></i> Terms and Conditions</a>
            </p>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}