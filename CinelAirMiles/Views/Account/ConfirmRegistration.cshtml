<section class="content">
    <div class="container">
        <h1>Thank you for registering.</h1>
        <div class="container-fluid">
            <div class="box box-info">
                <div class="box-header with-border">
                    <div class="panel-body">
                        <div class="col-12">
                            @using (Html.BeginForm("ConfirmEmail", "Account", FormMethod.Post, new { @autocomplete = "on" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="card-body">
                                    <div class="form-group">
                                        <h3>We need you to confirm the email you just registered with. Please check your inbox.</h3><br />
                                        <h5>After that our administrators must confirm your account before you can access our offers.</h5><br />
                                        <h2>Thank you for choosing Cinel Air!</h2>
                                    </div>
                                </div>
                            }
                        </div>
                        <a asp-action="IndexClient" asp-controller="Home"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}