@model CinelAirMiles.Models.ChangeUserViewModel


<section class="content">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Update your personal information here</h3>

            </div>
            <!-- Content Header (Page header) -->


            @using (Html.BeginForm("ChangeUserClient", "Account", FormMethod.Post, new { @autocomplete = "on" }))
            {
                @Html.AntiForgeryToken()

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name">First Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-warning"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address">Address</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-warning"></span>
                            </div>
                            <div class="form-group">
                                <label>Country</label>
                                <select asp-for="CountryId" asp-items="Model.Countries"
                                        class="form-control select2" style="width: 100%;">
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Update" class="btn btn-info" />
                                <a asp-action="ChangePassword" class="btn btn-default">Change Password</a>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TIN">TIN</label>
                                <input asp-for="TIN" class="form-control" />
                                <span asp-validation-for="TIN" class="text-warning"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                            </div>
                            <div class="form-group">
                                <label>City</label>
                                <select asp-for="CountryId" asp-items="Model.Cities"
                                        class="form-control select2" style="width: 100%;">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>
