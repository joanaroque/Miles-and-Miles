@model IEnumerable<CinelAirMiles.Models.PremiumOfferViewModel>


<section id="team">

    <div class="container">
        <div class="row">

            <div class="col-md-12 col-sm-12">
                <div class="section-title">
                    <h2>Promotions<small>See what you can enjoy with our promotions</small></h2>
                </div>
            </div>
            @foreach (var item in Model)
            {

                <div class="col-md-3 col-sm-6">
                    <div class="team-thumb">
                        <div><h5>@item.Title</h5></div>
                        <div class="team-image">
                            <img style="max-width:300px; max-height:300px" src='@Url.Action("GetOffersImageFile", "Home", new { id = item.Id})' />
                        </div>
                        <div class="team-info">
                            <p>
                                @Html.DisplayFor(modelItem => item.Conditions)
                            </p>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</section>


