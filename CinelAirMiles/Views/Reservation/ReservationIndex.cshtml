@model IEnumerable<CinelAirMiles.Models.ReservationViewModel>

@{
    ViewData["Title"] = "ReservationIndex";
}

<section class="content-header">
    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Reservation</li>
    </ol>

</section>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />


<h2>Reservation</h2>

<div class="register" style="margin-top:10px; margin-bottom:0px">

    <div class="container-fluid">

        <div class="box box-info" style="margin-top:10px">

            <div class="box-header with-border">

                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="MyTable">

                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Destination
                                </th>
                                <th>
                                    Company
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClientName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Destination)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PartnerName)
                                    </td>
                                    <td>
                                        <a asp-action="CancelReservation" class="btn btn-info" asp-route-id="@item.ReservationId"><i class="fa fa-ban"></i> </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });


    </script>

}
