@model CinelAirMiles.Models.ComplaintViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>CreateComplaintViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Complaint" class="control-label"></label>
                <select asp-for="Complaint" asp-items="Model.Complaints" class="form-control"></select>
                <span asp-validation-for="Complaint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <input asp-for="Body" class="form-control" />
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


