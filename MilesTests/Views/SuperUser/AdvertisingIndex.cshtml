@model IEnumerable<MilesBackOffice.Web.Models.AdvertisingViewModel>

@{
    ViewData["Title"] = "Miles News";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Publicity & News</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class="breadcrumb-item active">Publicity/News</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<br />

<table class="table stats-table index-table">
    <thead>
        <tr>
            <th>Article Id</th>
            <th>Title</th>
            <th>Created On</th>
            <th>Created By</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.PostGuidId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                <a onclick="openPartial()" action="AdvertisingDetails" class="btn btn-warning" data-value="@item.Id">
                    <i class="fa fa-list"></i>
                </a>
                <a>-  -  - </a>
                <a asp-action="ConfirmAdvertisingAndReferences" asp-route-id="@item.Id" class="btn btn-success">
                    <i class="far fa-check-circle"></i>
                </a>
                <a>-  -  - </a>
                <a asp-action="CancelPublishAdvertising" asp-route-id="@item.Id" class="btn btn-danger">
                    <i class="fas fa-ban"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

<div id="form_container">

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script type="text/javascript">


    function imagePreview(input) {
        if (input.files && input.files[0]) {
            let fildr = new FileReader();
            fildr.onload = function (e) {
                $('#imgprw').attr('src', e.target.result);
            }
            fildr.readAsDataURL(input.files[0]);
        }
    }
</script>
}
