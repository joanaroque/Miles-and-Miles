@model MilesBackOffice.Web.Models.PremiumOfferViewModel

@{
    ViewData["Title"] = "Premium Offer Details";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <br />
                    <h1>Premium Offer Details</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Home" asp-controller="Account">Home</a></li>
                        <li class="breadcrumb-item active">Offer Details</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">

                        <!-- /.card-header -->
                        <div class="box box-info" style="margin-top:10px">
                            <div class="box-header with-border">

                                <div class="row">

                                    <div class="col-sm-8">

                                        <dl class="dl-horizontal">

                                            <dt>
                                                @Html.DisplayNameFor(model => model.Flights)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Flights)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.PartnersList)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.PartnersList)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.Quantity)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Quantity)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.Price)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Price)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.Conditions)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Conditions)
                                            </dd>
                                            <dt>
                                                @Html.DisplayNameFor(model => model.Type)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Type)
                                            </dd>
                                        </dl>
                                        <div>
                                            <a asp-action="PremiumOfferList" class="btn btn-success  pull-right"><i class="fa fa-backward"></i></a>

                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
