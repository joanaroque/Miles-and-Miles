@model MilesBackOffice.Web.Models.SuperUser.ComplaintClientViewModel


    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <br />
                        <h1>Complaint Reply</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a asp-action="Home" asp-controller="Account">Home</a></li>
                            <li class="breadcrumb-item active">Complaint Reply</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <div class="col-md-9">
            <div class="card card-primary card-outline">
               
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="form-group">
                        <form asp-action="ComplaintReply">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control" disabled>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Subject" class="control-label"></label>
                                <input asp-for="Subject" class="form-control" disabled>
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Reply" class="control-label"></label>
                                <textarea asp-for="Reply" class="form-control"> </textarea>
                                <span asp-validation-for="Reply" class="text-danger"></span>
                            </div>

                            <div class="card-footer">
                                <div class="float-right">
                                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Send</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">

        $(function () {
            $('#compose-textarea').summernote()
        })
    </script>
}


