@model MilesBackOffice.Web.Models.PartnerViewModel


<div id="newPartner">
    <h2>New Partner</h2>
    <div class="row">
        <form action="AddNewPartner" method="post" class="form-group">
            <label asp-for="CompanyName"></label>
            <div class="form-group">
                <input asp-for="CompanyName" type="text" required />
                <span asp-validation-for="CompanyName"></span>
            </div>
            <label asp-for="Address"></label>
            <div class="form-group">
                <input asp-for="Address" type="text" required />
                <span asp-validation-for="Address"></span>
            </div>
            <label asp-for="Url"></label>
            <div class="form-group">
                <input asp-for="Url" type="text" required />
                <span asp-validation-for="Url"></span>
            </div>
            <label asp-for="Designation"></label>
            <div class="form-group">
                <input asp-for="Designation" type="text" required />
                <span asp-validation-for="Designation"></span>
            </div>
            <label asp-for="Logo"></label>
            <div class="form-group">
                <input asp-for="Logo" type="file" />
                <span asp-validation-for="Logo"></span>
            </div>
            <label asp-for="Description"></label>
            <div class="form-group">
                <input asp-for="Description" type="text" required />
                <span asp-validation-for="Description"></span>
            </div>
            <div>
                <button type="submit">Add</button>
            </div>
        </form>
    </div>
</div>