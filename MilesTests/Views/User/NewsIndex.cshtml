@model IEnumerable<MilesBackOffice.Web.Models.AdvertisingViewModel>

@{
    ViewData["Title"] = "Miles News";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Publicity & News</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Home" asp-controller="Account">Home</a></li>
                    <li class="breadcrumb-item active">Publicity/News</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<br />

<div class="news_cards">

    @foreach (var item in Model)
    {
        <div class="news_card">
            <header>
                @Html.DisplayFor(news => item.Title)
            </header>
            <div>
                <div>
                </div>
                <p>
                    @Html.DisplayFor(news => item.Content)
                </p>
            </div>
        </div>
    }
</div>

<div>
    <button id="btn_publishNews" action="PublishPost">New Headline</button>
</div>

<div id="form_container">

</div>

<script type="text/javascript">
    window.addEventListener('load', function () {
        byID('btn_publishNews').addEventListener('click', openPartialCreate);
    });

    function imagePreview(input) {


        if (input.files && input.files[0]) {
            let fildr = new FileReader();
            fildr.onload = function (e) {
                $('#imgprw').attr('src', e.target.result);
            }
            fildr.readAsDataURL(input.files[0]);
        }
    }
</script>
