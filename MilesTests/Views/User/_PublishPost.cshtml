@model MilesBackOffice.Web.Models.AdvertisingViewModel


<h4>Publish</h4>
<hr />
<div class="col-12">

    <form asp-action="PublishPost">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="ImageId" class="control-label"></label>
            <input asp-for="ImageId" type="file" />
            <span asp-validation-for="ImageId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Partner.CompanyName" class="control-label"></label>
            <select type="text" asp-for="Partner.CompanyName" asp-items="Model.PartnersList" required><option value="">Select a Partner</option></select>
            <span asp-validation-for="Partner.CompanyName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <textarea asp-for="Content" class="form-control" required cols="10"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        
        <button type="submit" class="btn btn-outline-success">Create</button>

    </form>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
