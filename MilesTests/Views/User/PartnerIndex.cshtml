@model MilesBackOffice.Web.Models.User.PartnerViewModel

@{
    ViewData["Title"] = "Partnerships";
}



<div>
    <h2>Partnerships</h2>
</div>

<div>
    <div class="stats-info stats-last widget-shadow">
        <div class="stats-last-agile">
            <table class="table stats-table">
                <tr>
                    <th>Partner ID</th>
                    <th>Company Name</th>
                    <th>Link</th>
                    <th>Partner Since</th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Partners)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Url)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDate)
                            </td>
                            <td>
                                <a class="btn btn-info pull-right" data-value="@item.Id" onclick="openPartial()" action="EditPartner"><i class="fa fa-user-edit"></i></a>
                                <a class="btn btn-danger pull-right" asp-action="Delete"
                                   data-id="@item.Id" onclick="return confirm('Are you sure you want to delete @item.CompanyName?')">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
            </table>
        </div>
    </div>
</div>

<div>
    <button id="btn_newPartner" action="AddNewPartner" >Add New Partnership</button>
</div>


<div id="form_container">

</div>

<script type="text/javascript">
    window.addEventListener('load', function () {
        byID('btn_newPartner').addEventListener('click', openPartialCreate);
    });
</script>
