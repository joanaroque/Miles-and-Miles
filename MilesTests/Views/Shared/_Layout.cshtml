<!DOCTYPE html>

@using CinelAirMilesLibrary.Common.Enums;


<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CinelAir Miles | @ViewData["Title"]</title>

    <!-- bootstrap-css -->
    <link rel="stylesheet" href="~/bootstrap-4.5.3-dist/css/bootstrap.css">
    <!-- //bootstrap-css -->
    <!-- font CSS -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>


    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="hold-transition layout-top-nav">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
            <div class="container">
                <a href="/" class="navbar-brand">
                    <img src="" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                    <span class="brand-text font-weight-light">CinelAir Miles</span>
                </a>

                <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                    <!-- Left navbar links -->
                    @if (User.Identity.IsAuthenticated && User.IsInRole(UserType.Admin.ToString()))
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown row">
                                <a class="nav-link" data-toggle="dropdown" href="#">
                                    <i class="fas fa-user">Users</i>
                                </a>

                                <div class="dropdown-menu dropdown-menu-lg-right">
                                    <a asp-controller="Administrator" asp-action="Register" class="nav-link">
                                        Create User
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a asp-controller="Administrator" asp-action="ListUsers" class="nav-link">
                                        List Users
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a asp-controller="Administrator" asp-action="InactiveUsers" class="nav-link">
                                        Inactive Users
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a asp-controller="Administrator" asp-action="NewClients" class="nav-link">
                                        Users To be Approved
                                    </a>
                                    <div class="dropdown-divider"></div>
                                </div>
                            </li>
                        </ul>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole(UserType.SuperUser.ToString()))
                    {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="SuperUser" asp-action="TierChange" class="nav-link">
                            Tier Change
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="SuperUser" asp-action="Complaints" class="nav-link">
                            Complaints
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="SuperUser" asp-action="Advertising" class="nav-link">
                            Advertising
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="SuperUser" asp-action="AvailableSeats" class="nav-link">
                            Flights List
                        </a>
                    </li>
                </ul>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole(UserType.User.ToString()))
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="NewsIndex" class="nav-link">
                                    News
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="PartnerIndex" class="nav-link">
                                    Partner
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="PremiumIndex" class="nav-link">
                                    Premium
                                </a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a asp-controller="Administrator" asp-action="ListUsers" class="nav-link">
                                    Users
                                </a>
                            </li>
                            <!--TEMPORARY DROPDOWNS-->
                            <li class="nav-item dropdown row">
                                <a class="nav-link" data-toggle="dropdown" href="#">
                                    <i class="fas fa-user"> Super User</i>
                                </a>

                                <div class="dropdown-menu dropdown-menu-lg-right">
                                    <a asp-controller="SuperUser" asp-action="TierChange" class="nav-link">
                                        Tier Change
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a asp-controller="SuperUser" asp-action="Complaints" class="nav-link">
                                        Complaints
                                    </a>

                                    <div class="dropdown-divider"></div>
                                    <a asp-controller="SuperUser" asp-action="Advertising" class="nav-link">
                                        Advertising
                                    </a>

                                    <div class="dropdown-divider"></div>
                                    <a asp-controller="SuperUser" asp-action="PartnerReferences" class="nav-link">
                                        Partners
                                    </a>

                                    <div class="dropdown-divider"></div>
                                    <a asp-controller="SuperUser" asp-action="PremiumOfferList" class="nav-link">
                                        Premium Offers
                                    </a>
                                    <div class="dropdown-divider"></div>
                                </div>
                            </li>

                            <li class="nav-item dropdown row">
                                <a class="nav-link" data-toggle="dropdown" href="#">
                                    <i class="fas fa-user"> User</i>
                                </a>

                                <div class="dropdown-menu dropdown-menu-sm-right">
                                    <a asp-controller="User" asp-action="NewsIndex" class="nav-link">
                                        News
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a asp-controller="User" asp-action="PartnerIndex" class="nav-link">
                                        Partner
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a asp-controller="User" asp-action="PremiumIndex" class="nav-link">
                                        Premium
                                    </a>
                                    <div class="dropdown-divider"></div>
                                </div>
                            </li>
                            <!--END TEMPORARY DROPDOWNS-->
                        </ul>
                    }

                </div>

                <!-- Right navbar links -->
                <ul class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
                    <!-- Messages Dropdown Menu -->
                    <li class="nav-item dropdown">
                        <a class="nav-link" data-toggle="dropdown" href="#">
                            <i class="fas fa-comments"></i>
                            <span class="badge badge-danger navbar-badge">3</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                            <a href="#" class="dropdown-item">
                                <!-- Message Start -->
                                <div class="media">
                                    <img src="" alt="User Avatar" class="img-size-50 mr-3 img-circle">
                                    <div class="media-body">
                                        <h3 class="dropdown-item-title">
                                            Brad Diesel
                                            <span class="float-right text-sm text-danger"><i class="fas fa-star"></i></span>
                                        </h3>
                                        <p class="text-sm">Call me whenever you can...</p>
                                        <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i> 4 Hours Ago</p>
                                    </div>
                                </div>
                                <!-- Message End -->
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item">
                                <!-- Message Start -->
                                <div class="media">
                                    <img src="" alt="User Avatar" class="img-size-50 img-circle mr-3">
                                    <div class="media-body">
                                        <h3 class="dropdown-item-title">
                                            John Pierce
                                            <span class="float-right text-sm text-muted"><i class="fas fa-star"></i></span>
                                        </h3>
                                        <p class="text-sm">I got your message bro</p>
                                        <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i> 4 Hours Ago</p>
                                    </div>
                                </div>
                                <!-- Message End -->
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item">
                                <!-- Message Start -->
                                <div class="media">
                                    <img src="" alt="User Avatar" class="img-size-50 img-circle mr-3">
                                    <div class="media-body">
                                        <h3 class="dropdown-item-title">
                                            Nora Silvester
                                            <span class="float-right text-sm text-warning"><i class="fas fa-star"></i></span>
                                        </h3>
                                        <p class="text-sm">The subject goes here</p>
                                        <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i> 4 Hours Ago</p>
                                    </div>
                                </div>
                                <!-- Message End -->
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item dropdown-footer">See All Messages</a>
                        </div>
                    </li>
                    <!-- Notifications Dropdown Menu -->
                    <li class="nav-item dropdown">
                        <a class="nav-link" data-toggle="dropdown" href="#">
                            <i class="far fa-bell"></i>
                            <span class="badge badge-warning navbar-badge">15</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                            <span class="dropdown-header">15 Notifications</span>
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-envelope mr-2"></i> 4 new messages
                                <span class="float-right text-muted text-sm">3 mins</span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-users mr-2"></i> 8 friend requests
                                <span class="float-right text-muted text-sm">12 hours</span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-file mr-2"></i> 3 new reports
                                <span class="float-right text-muted text-sm">2 days</span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item dropdown-footer">See All Notifications</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                            <i class="fas fa-th-large"></i>
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a asp-controller="Account" asp-action="ChangeUser">Hello @this.User.Identity.Name !</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
        <!-- /.navbar -->
        <partial name="_CookieConsentPartial" />
        <div class="content-wrapper">
            <div class="content">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>

        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Anything you want
            </div>
            <!-- Default to the left -->
            <strong>CinelAir Miles.</strong> All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4.5.3 -->
    <script src="~/bootstrap-4.5.3-dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>
    <!--CUSTOM SCRIPT-->
    <script src="~/js/site.js" type="text/javascript"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
