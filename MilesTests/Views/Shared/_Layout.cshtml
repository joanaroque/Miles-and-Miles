<!DOCTYPE html>

@using CinelAirMilesLibrary.Common.Enums


<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CinelAir Miles | @ViewData["Title"]</title>

    <!-- bootstrap-css -->
    <link rel="stylesheet" href="~/bootstrap-4.5.3-dist/css/bootstrap.css">
    <!-- //bootstrap-css -->
    <!-- font CSS -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="hold-transition layout-top-nav">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
            <div class="container">
                <div class="navbar-brand">
                    <img src="~/images/miles-icon-3.jpg" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                    <span class="brand-text font-weight-light">CinelAir Miles</span>
                </div>

                <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                    <!-- Left navbar links -->
                    @if (User.Identity.IsAuthenticated && User.IsInRole(UserType.Admin.ToString()))
                    {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-controller="Administrator" asp-action="Register" class="nav-link">
                                Create User
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Administrator" asp-action="ListUsers" class="nav-link">
                                List Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Administrator" asp-action="NewClients" class="nav-link">
                                Users To be Approved
                            </a>
                        </li>
                    </ul>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole(UserType.SuperUser.ToString()))
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a asp-controller="SuperUser" asp-action="TierChange" class="nav-link">
                                    Tier Change
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="SuperUser" asp-action="Complaints" class="nav-link">
                                    Client Requests
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="SuperUser" asp-action="AdvertisingIndex" class="nav-link">
                                    Advertising
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="SuperUser" asp-action="PremiumIndex" class="nav-link">
                                    Flights List
                                </a>
                            </li>
                        </ul>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole(UserType.User.ToString()))
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="NewsIndex" class="nav-link">
                                    News
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="PartnerIndex" class="nav-link">
                                    Partner
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="PremiumIndex" class="nav-link">
                                    Premium
                                </a>
                            </li>
                        </ul>
                    }

                </div>

                <!-- Right navbar links -->
                <ul class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
                    <!-- Messages Dropdown Menu -->
                    @await Html.PartialAsync("_NavNotifications")

                    <li class="nav-item nav-link">
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item nav-link">
                            <a asp-controller="Account" asp-action="AccountDetails">Hello @this.User.Identity.Name !</a>
                        </li>
                        <li class="nav-item nav-link">
                            <a asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
        <!-- /.navbar -->

        <div class="content-wrapper">
            <div class="content">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>
        <partial name="_CookieConsentPartial" />
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Where do you want to go today?
            </div>
            <!-- Default to the left -->
            <strong>CinelAir Miles.</strong> All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/datatables/jquery.dataTables.js"></script>
    <!-- Bootstrap 4.5.3 -->
    <script src="~/bootstrap-4.5.3-dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>
    <!--CUSTOM SCRIPT-->
    <script src="~/js/site.js" type="text/javascript"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
