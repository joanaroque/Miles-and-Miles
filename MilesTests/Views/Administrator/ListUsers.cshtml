@model IEnumerable<MilesBackOffice.Web.Models.UserDetailsViewModel>


<div class="content-wrapper">
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <h1>User's List</h1>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <table id="users" class="display table table-bordered table-striped index-table" style="width:100%">
                            <thead>
                                <tr>
                                    <th>#ID</th>
                                    <th>Username</th>
                                    <th>Role</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.GuidId</td>
                                        <td>@user.Username</td>
                                        <td>@user.SelectedRole</td>
                                        <td>
                                            <a class="btn btn-info pull-right" asp-action="DetailsUserPage" asp-route-id="@user.Id"><i class="fa fa-list"></i></a>
                                            <a class="btn btn-danger pull-right" asp-action="DeleteUser" asp-route-id="@user.Id" onclick="return confirm('Are you sure you want to delete @user.Name account?')"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
