@model IEnumerable<MilesBackOffice.Web.Models.AdvertisingViewModel>

@{
    ViewData["Title"] = "Miles Advertising";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Publicity & News</h2>
            </div>
            @*<div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li class="breadcrumb-item active">Publicity/News</li>
                    </ol>
                </div>*@
        </div>
    </div>
</section>
<br />

<table class="display table table-bordered table-striped index-table">
    <thead>
        <tr>
            <th>Article Id</th>
            <th>Title</th>
            <th>Created On</th>
            <th>Created By</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.PostGuidId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    <a class="btn btn-danger pull-right" asp-action="DeleteAd" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this advertising?')"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}